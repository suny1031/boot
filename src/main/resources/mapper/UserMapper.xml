<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

        <mapper namespace="com.toy.sy.UserRepository">
            <update id="mybatis_update">
                    update USER
                    <set>
                        <if test="PASSWORD != null">
                            PASSWORD = #{PASSWORD}
                        </if>
                        <if test="EMAIL != null">
                            , EMAIL = #{EMAIL}
                        </if>
                        <if test="TELL != null">
                            , TELL = #{TELL}
                        </if>
                    </set>
                    where ID = #{ID}
                </update>
        </mapper>